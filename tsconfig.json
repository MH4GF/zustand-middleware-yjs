{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationDir": "./",
    "rootDir": "./src",
    "removeComments": true,
    "moduleResolution": "node",
    "allowJs": true,

    "strict": true,
    "alwaysStrict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
  ]
}
